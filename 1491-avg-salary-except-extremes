class Solution {
public:
   double average(vector<int>& salary) {
       int size = salary.size();
       double sum = 0;
       sort(salary.begin(),salary.end());
       for(int i=1;i<size-1;i++){
           sum += salary[i];
       }
       return (sum/(size-2));
   }
};

sum = 0
sum = 0 + 2000 → sum becomes 2000
sum = 2000 + 3000 → sum becomes 5000
